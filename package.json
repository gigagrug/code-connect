{
  "name": "Code Connect",
  "scripts": {
    "tw": "npx @tailwindcss/cli -i ./static/input.css -o ./static/output.css -m -w",
    "fmt": "npx prettier --write **/*.html"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.17",
    "@tailwindcss/cli": "^4.1.17",
    "prettier": "^3.7.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.7.1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ],
    "printWidth": 1000
  }
}
